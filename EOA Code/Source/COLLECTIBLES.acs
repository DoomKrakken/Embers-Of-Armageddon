Script "CollectiblesTracker" ENTER
{	
	Delay(13);
	
	SetHUDSize (1024, 780, 0);//SetHUDSize (1152, 864, 0);
	
	//Mission Label
	SetFont	("MISSION");
	HudMessage(s:"A"; HUDMSG_PLAIN|HUDMSG_NOTWITH3DVIEW|HUDMSG_LAYER_OVERMAP, -991, CR_UNTRANSLATED, 0.1, 70.1, 0);
	
	//box background
	SetFont	("HUDTOKEN"); 
	HudMessage(s:"0"; HUDMSG_PLAIN|HUDMSG_NOTWITH3DVIEW|HUDMSG_LAYER_OVERMAP|HUDMSG_Alpha, -992, CR_UNTRANSLATED, 1024.2, 730.2, 0, 0.4);
	HudMessage(s:"1"; HUDMSG_PLAIN|HUDMSG_NOTWITH3DVIEW|HUDMSG_LAYER_OVERMAP, -993, CR_UNTRANSLATED, 1024.2, 730.2, 0);
	
	//background for wep upgrade points and praetor tokens counter
	SetFont ("PTOKENS");
	HudMessage(s:"A"; HUDMSG_PLAIN|HUDMSG_NOTWITH3DVIEW|HUDMSG_LAYER_OVERMAP, -994, CR_UNTRANSLATED, 1024.2, 50.1, 0);
	
	//wep upgrade points and praetor tokens counter
	
	While (1 /*GetActorProperty(0, APROP_HEALTH) > 0*/)
	{
		int totalmonsters = GetLevelInfo(LEVELINFO_TOTAL_MONSTERS);
		int killedmonsters = GetLevelInfo(LEVELINFO_KILLED_MONSTERS);
		int weppoint = CheckInventory("WeaponUpgradePoint");
		int prtoken = CheckInventory("PraetorToken");
		SetFont	("SPRMLT"); 
		HudMessage(d:weppoint; HUDMSG_PLAIN|HUDMSG_NOTWITH3DVIEW|HUDMSG_LAYER_OVERMAP, -995, CR_UNTRANSLATED, 880.1, 55.1, 0);
		HudMessage(d:prtoken; HUDMSG_PLAIN|HUDMSG_NOTWITH3DVIEW|HUDMSG_LAYER_OVERMAP, -996, CR_UNTRANSLATED, 940.1, 55.1, 0);
		SetFont	("TTSMALL"); 
		HudMessage(d:killedmonsters,s:" / ",d:totalmonsters; HUDMSG_PLAIN|HUDMSG_NOTWITH3DVIEW|HUDMSG_LAYER_OVERMAP, -997, CR_UNTRANSLATED, 152.1, 153.1, 0);
		Delay(17);
	}
	
}

//	Now for the actual "per-type-of-collectible" trackers. As you'll see, they're progged so that they show catalogued rows of those sweet shiny orange icons,
//	rather that bland numbers - up to a maximum of SIX(6) for each of the 4 collectible types. They will start greyed-out, & turn orange as you collect them.
//	Easy on the eyes, & super-quick to digest info feed.
//	The limit for this display type is 6: You'll NEVER find more than 6 [insert collectible type here] in one map...

//	HOWEVER: Just in case a map is crazy enough to house more than 6 of any given collectible type, the display will auto-shift to a more traditional,
//	yet still dynamic, numbered ratio display. in this instance, You'll see the Collectible's icon in GREY coupled with a "found/remaining" ratio.
//	Once you have successfully scavenged ALL 666 collectibles of the same type in your crazy map, its Icon will turn ORANGE: proof that you're done looting
//	said collectible type.


