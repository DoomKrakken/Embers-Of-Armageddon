Script "TooManySecrets" (void)	// This is where, when the map has more than 6 Secrets, the Tracker HUD will switch to an Icon-&-ratio display. 
{
	Delay(1);
	
	int TotalSecrets = GetLevelInfo(LEVELINFO_TOTAL_SECRETS);
	int SecretsFound = GetLevelInfo(LEVELINFO_FOUND_SECRETS);
	
	If (SecretsFound == TotalSecrets)
	{
		SetHUDSize (1024,780,0);
		SetFont("BIGFONT");
		HudMessage(d:SecretsFound, s:" / ", d:TotalSecrets; HUDMSG_PLAIN|HUDMSG_NOTWITH3DVIEW|HUDMSG_LAYER_OVERMAP|HUDMSG_Alpha, -111, CR_ORANGE, 870.1, 595.0, 0, 1.0);
	}
	Else
	{
		SetHUDSize (1024,780,0);
		SetFont("BIGFONT");
		HudMessage(d:SecretsFound, s:" / ", d:TotalSecrets; HUDMSG_PLAIN|HUDMSG_NOTWITH3DVIEW|HUDMSG_LAYER_OVERMAP|HUDMSG_Alpha, -111, CR_GREY, 870.1, 595.0, 0, 0.70);
	}
	Delay(3);
}

