Script "TooManyRuneStones" (void)
{
	Delay(1);
	
	int TotalRuneStones = ThingCountName("EOA_RuneTrialStone", 0);
	int FoundRuneStones = TotalRuneStones - ScriptCall("EOA_StaticArchive", "GetRuneTrialStonesSpawned") + ScriptCall("EOA_StaticArchive", "GetRuneTrialStonesClaimed"); //CheckInventory("RuneHUDToken");
						

	If (FoundRuneStones == TotalRuneStones)
	{
		SetHUDSize (1024,780,0);
		SetFont("BIGFONT");
		HudMessage(d:FoundRuneStones, s:" / ", d:TotalRuneStones; HUDMSG_PLAIN|HUDMSG_NOTWITH3DVIEW|HUDMSG_LAYER_OVERMAP|HUDMSG_Alpha, -511, CR_ORANGE, 915.1, 710.0, 0, 1.0);
	}
	Else
	{
		SetHUDSize (1024,780,0);
		SetFont("BIGFONT");
		HudMessage(d:FoundRuneStones, s:" / ", d:TotalRuneStones; HUDMSG_PLAIN|HUDMSG_NOTWITH3DVIEW|HUDMSG_LAYER_OVERMAP|HUDMSG_Alpha, -511, CR_GREY, 915.1, 710.0, 0, 0.7);
	}
	Delay(3);
}